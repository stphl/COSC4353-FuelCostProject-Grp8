<!DOCTYPE html>
<html>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="css/style.css" type="text/css" rel="stylesheet">
  

  <script>
    function calculate() {
      const quoteForm = document.forms[0];
      if (quoteForm.elements["gals"].value == "") {
        window.alert("Please enter Gallons Requested")
        return 0;
      }

      suggestedPrice = 1.5 + .195; //temp dummy variable
      quoteForm.elements["pricepergal"].value = suggestedPrice;
      quoteForm.elements["totalprice"].value = suggestedPrice * quoteForm.elements["gals"].value;
      return 0; //dummy
    }
  </script>
</head>

<body>
  <div class="top-nav">
    <ul class="menu">
      <li><a href=""><strong>Calculate Fuel Quote</strong></a></li>
      <li><a href=""><strong>Fuel Quote History</strong></a></li>
      <li><a href=""><strong>Profile</strong></a></li>
    </ul>
  </div>
  <h1 class="headingText">Fuel Corp Fuel Quote</h1>
  <div class="MainContainer">
    <form action="" method="post" ,id="quote form">
      <div class="container">
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" placeholder="" value= "" required>

        <label for="city">City:</label>
        <input type="text" id="city" name="city" placeholder="" value= "" required>

        <label for="state">State:</label>
        <select id="state" name="state" required>
            <option value="" disabled selected>Select State</option>
            <option value="TX">TX</option>
            <option value="FL">FL</option>
            <!-- TO DO: Add query to fetch states from db -->
        </select>

        <label for="gals">Gallons Requested:</label>
        <input type="numeric" placeholder="Enter Gallons requested" id="gals" name="gals" value="" onkeyup="" required>

        <label for="date">Delivery date:</label>
        <input type="date" id="date" name="date" value="" required>


        <button type="button" onclick="calculate()">Get Quote</button>
        <button type="submit">Submit Form</button>

      </div>
    </form>

    <!-- <div class="container" id="quotes"></div> -->
</body>

</html>